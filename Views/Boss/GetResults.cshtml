@model List<Order>

@{
    ViewData["Title"] = "Результаты";
}

<html>
    <nav class="one">
          <ul>
            <li><a asp-controller="Home" asp-action="Index">На главную</a></li>
            <li>
               <a href="~/Boss/Index">Назад</a>
            </li>            
            <li><a asp-controller="Account" asp-action="Logout">Выход</a></li>            
          </ul>
    </nav>
    <body>
    <table class = "table table-striped">
            <tr>
                <th>Номер заявки</th>
                <th>Имя сотрудника</th>
                <th>Статус заявки</th>
                <th>Оценка начала работы</th>
                <th>Оценка конца работы</th>
                <th>Отзыв клиента</th>   
                <th>Вероятность рекоммендации</th> 
                <th>Общая оценка работы</th>
            </tr>
            @foreach (Order order in Model)
            {
                <tr>
                    <th>@order.Id</th>
                    <th>@order.WorkerName</th>
                    <th>@order.Status</th>
                    <th>@order.ValueBeginOfWork</th>
                    <th>@order.ValueEndOfWork</th>
                    <th>@order.Feedback</th>
                    <th>@order.Recommend</th>
                    <th>@order.OrderStatement</th>
                </tr>
                
            }
        </table>
    </body>
</html>
