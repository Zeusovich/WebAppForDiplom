@model Order
@{
    ViewData["Title"] = "Оценить заявку";
}
<html>
    <nav class="one">
          <ul>
            <li><a asp-controller="Home" asp-action="Index">На главную</a></li>
            <li>
               <a href="~/Boss/Index">Назад</a>
            </li>            
            <li><a asp-controller="Account" asp-action="Logout">Выход</a></li>            
          </ul>
    </nav>
    <body>
        <h2>Оцените работу:</h2>
        <form class="orderForm" asp-controller ="Boss" asp-action="RateOrder" method="post" >
            <label>Номер заявки</label><br /> 
            <input asp-for="Id" /><br /> 
            <label>Оценка быстроты принятия</label><br /> 
            <input type="number"  max="5" min="1" step="1" asp-for="ValueBeginOfWork" /><br /> 
            <label>Оценка быстроты решения</label><br /> 
            <input type="number"  max="5" min="1" step="1" asp-for="ValueEndOfWork" /><br /> 
            <input class="buttonSubmit" type="submit" value="Оценить" />
        </form>
    </body>     
</html>  

<style>
    textarea{
        width: 300px;
        height:100px;
    }
    .orderForm {
      width: 320px;
      margin: 0 auto;
      padding: 50px;
      background: #4b9c53;
      position: fixed; top: 40%; left: 20%;
      -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
      transform: translate(-50%, -50%);
      border-radius: 10px;
    }   
    .buttonSubmit{
    width:120px;
    background-color:#2f6634;
    left: 60px;
    margin-top:10px;
    margin-left:20px;
    }
    body {margin:0;}
    h2 {
      font-family: monospace;
      color: #606060;
    }
    ul {
      list-style: none; 
      margin: 0 auto;
    }
    a {
      text-decoration: none;
      font-family: 'Lora', serif;
      transition: .5s linear;
    }
    i {
      margin-right: 10px;
    }
    nav {
      display: block;
      width: 100%;
      margin: 0 auto 30px;
      color:#2f6634;
    }
    .one ul {
      padding: 1em 0;
      background: #2f6634;
    }
    .one a {
      padding: 1em;
      background: rgba(177, 152, 145, .3);
      border-right: 1px solid #b19891;
      color: black;
    }
    .one a:hover {background: #b19891;}
